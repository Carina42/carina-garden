<body>
  <header>ğŸ“– æŸ´çªä¹‹å®¶ Â· é˜…è¯»ä¹¦æ¶</header>

  <div class="controls">
    <button onclick="changeCount(-1)">â–</button>
    <span id="count">0</span> æœ¬ä¹¦
    <button onclick="changeCount(1)">â•</button>
    <button class="toggle-theme" onclick="toggleTheme()">ğŸŒ“ æ—¥å¤œåˆ‡æ¢</button>
  </div>

  <div class="shelf" id="shelf"></div>
  <div class="shelf" id="flowers"></div>

  <div class="tracker">
    <h3>ğŸ“ˆ é˜…è¯»è®°å½•è¡¨</h3>
    <table id="bookTable">
      <thead>
        <tr><th>ä¹¦å</th><th>ä½œè€…</th><th>æ ‡ç­¾</th><th>è¯»åæ„Ÿ</th><th>å°é¢ä¸Šä¼ </th></tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>

  <script>
    let count = parseInt(localStorage.getItem("bookCount")) || 0;
    let covers = JSON.parse(localStorage.getItem("bookCovers") || "[]");

    const countEl = document.getElementById("count");
    const shelf = document.getElementById("shelf");
    const flowerZone = document.getElementById("flowers");
    const table = document.getElementById("bookTable").querySelector("tbody");

    function updateShelf() {
      shelf.innerHTML = "";
      flowerZone.innerHTML = "";
      for (let i = 0; i < Math.ceil(count / 10); i++) {
        const row = document.createElement("div");
        row.className = "shelf-row";
        for (let j = 0; j < 10; j++) {
          const index = i * 10 + j;
          if (index >= count) break;
          const book = document.createElement("div");
          book.className = "book";
          if (covers[index]) book.style.backgroundImage = `url('${covers[index]}')`;
          row.appendChild(book);
        }
        shelf.appendChild(row);
      }
      const flowerCount = Math.floor(count / 10);
      for (let i = 0; i < flowerCount; i++) {
        const flower = document.createElement("div");
        flower.className = "flower";
        flowerZone.appendChild(flower);
      }
    }

    function changeCount(delta) {
      count = Math.max(0, count + delta);
      localStorage.setItem("bookCount", count);
      countEl.textContent = count;
      updateShelf();
      while (table.rows.length < count) addRow();
      while (table.rows.length > count) table.deleteRow(-1);
    }

    function handleUpload(index, file) {
      const reader = new FileReader();
      reader.onload = function (e) {
        covers[index] = e.target.result;
        localStorage.setItem("bookCovers", JSON.stringify(covers));
        updateShelf();
      };
      reader.readAsDataURL(file);
    }

    function addRow() {
      const row = document.createElement("tr");
      for (let i = 0; i < 4; i++) {
        const td = document.createElement("td");
        const input = document.createElement("input");
        input.type = "text";
        td.appendChild(input);
        row.appendChild(td);
      }
      const td = document.createElement("td");
      const input = document.createElement("input");
      input.type = "file";
      input.accept = "image/*";
      input.onchange = (e) => handleUpload(table.rows.length, e.target.files[0]);
      td.appendChild(input);
      row.appendChild(td);
      table.appendChild(row);
    }

    function toggleTheme() {
      document.body.classList.toggle("dark");
    }

    countEl.textContent = count;
    updateShelf();
    for (let i = 0; i < count; i++) addRow();
  </script>
</body>
